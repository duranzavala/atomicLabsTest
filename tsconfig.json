
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "*": ["types/*"],
      "@Auth/*": ["auth/*"],
      "@Utils/*": ["utilities/*"],
      "@Navigation/*": ["navigation/*"],
      "@Interfaces/*": ["interfaces/*"],
      "@Store/*": ["store/*"],
      "@Loading/*": ["loading/*"],
      "@Network/*": ["network/*"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
